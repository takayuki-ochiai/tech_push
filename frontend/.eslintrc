{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "extends": ["eslint:recommended", "airbnb"],
  "rules": {
    "strict": [2, "global"],
    "no-undef": 2,
    "no-console": 0,
    "arrow-parens": [2, "as-needed"],
    "jsx-quotes": 2,
    "comma-dangle": 0,
    "class-methods-use-this": 0,
    "react/prefer-stateless-function": 0,
    "react/prop-types": 0,
    "react/no-multi-comp": 0
  },
  "plugins": ["react"],
  "settings": {
    "react": {
      "pragma": "React",  // Pragma to use, default to "React"
      "version": "15.0" // React version, default to the latest React stable release
    }
  },
  "globals": {
    "it": true,
    "describe": true,
    "OneSignal": true,
    "FB": true,
    "$": true,
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
